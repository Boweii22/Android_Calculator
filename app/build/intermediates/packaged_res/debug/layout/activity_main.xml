<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F1F3F6">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/_0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="!"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:id="@+id/button_factorial"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="@string/_7"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_7"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="@string/_4"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_4"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_1"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="AC"
                android:textColor="@color/pink_red"
                android:textSize="20sp"
                android:id="@+id/button_ac"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="("
                android:textColor="@color/green"
                android:textSize="24sp"
                android:id="@+id/button_open_bracket"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_8"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_5"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_2"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_0"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text=")"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:id="@+id/button_close_bracket"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_9"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_6"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_3"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="."
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/button_dot"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="/"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:id="@+id/button_divide"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textColor="@color/green"
                android:text="*"
                android:textSize="24sp"
                android:id="@+id/button_multiply"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="+"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:id="@+id/button_plus"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="-"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:id="@+id/button_minus"
                android:backgroundTint="@color/white"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="24sp"
                android:id="@+id/button_equalsTo"
                android:backgroundTint="@color/green"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>